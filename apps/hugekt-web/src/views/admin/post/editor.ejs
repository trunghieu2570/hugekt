  <style>
    .ck-editor {
      display: flex;
      flex-grow: 1;
      flex-direction: column;
    }
    .ck-editor__main {
      display: flex;
      flex-grow: 1;
    }
    .ck-editor__editable_inline {
      min-height: 400px;
      flex-grow: 1;
    }
  </style>

  <script>
    $(function() {
      //Initialize Select2 Elements
      $('.select2').select2()

      $('.select2bs4').select2({
        theme: 'bootstrap4'
      })

      $('#tagSelect').select2({
        theme: 'bootstrap4',
        tags: true,
        tokenSeparators: [','],
        createTag: function(params) {
          var term = $.trim(params.term);

          if (term === '') {
            return null;
          }

          return {
            id: term,
            text: term,
            newTag: true // add additional parameters
          }
        }
      })

      //CKEDITOR.replace( 'editor' );
      //const ImageInsert = require('@ckeditor/ckeditor5-image/src/imageinsert');

      ClassicEditor
        .create(document.querySelector('#editor'), {
          toolbar: {
            items: [
              'heading',
              '|',
              'undo',
              'redo',
              'bold',
              'italic',
              'underline',
              'strikethrough',
              'subscript',
              'superscript',
              'link',
              'horizontalLine',
              'bulletedList',
              'numberedList',
              '|',
              'alignment',
              'outdent',
              'indent',
              '|',
              'fontSize',
              'fontFamily',
              'fontColor',
              'fontBackgroundColor',
              'imageInsert',
              'imageUpload',
              'blockQuote',
              'insertTable',
              'mediaEmbed',
              'findAndReplace',
              'specialCharacters',
              'code',
              'htmlEmbed',
              'sourceEditing'
            ]
          },
          language: 'en',
          image: {
            toolbar: [
              'imageTextAlternative',
              'imageStyle:inline',
              'imageStyle:block',
              'imageStyle:side',
              'linkImage'
            ]
          },
          table: {
            contentToolbar: [
              'tableColumn',
              'tableRow',
              'mergeTableCells'
            ]
          },
          licenseKey: '',



        })
        .then(editor => {
          window.editor = editor;

        })
        .catch(error => {
          console.error('Oops, something went wrong!');
          console.error('Please, report the following error on https://github.com/ckeditor/ckeditor5/issues with the build id and the error stack trace:');
          console.warn('Build id: w0x239ssm0o6-fpoy8yz90g9q');
          console.error(error);
        });

      // Summernote
      //   $('#editor').summernote({
      //     height: 360
      //   })
    });
  </script>
